<!-- ブログ記事風の投稿表示 -->
<article class="mb-8 p-6 border border-gray-300">
  <!-- 記事ヘッダー（ブログ記事のタイトル部分に相当） -->
  <header class="mb-2">
    <div class="flex items-center justify-between mb-2">
      <!-- 左側：ユーザアバター -->
      <div class="h-10 w-10 bg-gray-500 flex items-center justify-center overflow-hidden">
        <% if post.actor.icon_url.present? %>
          <img src="<%= post.actor.icon_url %>" 
               alt="<%= post.actor.display_name.presence || post.actor.username %>" 
               class="w-full h-full object-cover"
               loading="lazy">
        <% else %>
          <span class="text-white font-medium text-sm">
            <%= post.actor.display_name&.first&.upcase || post.actor.username.first.upcase %>
          </span>
        <% end %>
      </div>
      
      <!-- 右側：ユーザ名と日時表示 -->
      <div class="text-right">
        <!-- ユーザ名 -->
        <div class="text-base text-gray-900" style="font-weight: 300;">
          <%= link_to profile_path(post.actor.username), 
                      class: "hover:text-gray-600 transition-colors",
                      data: { turbo_frame: "_top" } do %>
            <%= post.actor.display_name.presence || post.actor.username %>
          <% end %>
          <span class="text-gray-500 text-sm ml-2" style="font-weight: 300;">
            @<%= post.actor.username %><%= post.actor.domain.present? ? "@#{post.actor.domain}" : "" %>
          </span>
        </div>
        
        <!-- 日時表示 -->
        <div class="text-sm text-gray-500 mt-1" style="font-weight: 300;">
          <%= link_to post_html_path(post.actor.username, post.id), 
                      class: "hover:text-gray-700 transition-colors",
                      data: { turbo_frame: "_top" } do %>
            <time datetime="<%= post.published_at.iso8601 %>" title="<%= l(post.published_at, format: :long) %>">
              <%= l(post.published_at, format: :long) %>
            </time>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- 記事本文 -->
  <div class="text-gray-800 leading-relaxed">
    <div class="whitespace-pre-wrap break-words">
      <% 
        # 絵文字をパースしてHTMLに変換
        parsed_content = EmojiParser.new(post.content).parse
        # その後でURLを自動リンク化（絵文字HTML対応）
        final_content = auto_link_urls(parsed_content)
      %>
      <%= final_content.html_safe %>
    </div>
  </div>

  <!-- 返信マーク -->
  <% if post.replies_count > 0 %>
    <div class="mt-4 flex items-center text-gray-400">
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 10H11a8 8 0 00-8 8v2m18-10l-6 6m6-6l-6-6" />
      </svg>
      <span class="text-sm" style="font-weight: 300;"><%= post.replies_count %></span>
    </div>
  <% end %>

  <!-- メディア添付（ブログ記事内の画像として表示） -->
  <% if post.media_attachments.any? %>
    <div class="mt-6">
      <% post.media_attachments.limit(4).each do |media| %>
        <div class="mb-4">
          <% if media.image? %>
            <img src="<%= media.remote_url %>" alt="<%= media.description %>" 
                 class="max-w-full h-auto border border-gray-200"
                 loading="lazy">
          <% elsif media.video? %>
            <video class="max-w-full h-auto border border-gray-200" controls preload="metadata">
              <source src="<%= media.remote_url %>" type="<%= media.content_type %>">
              <%= I18n.t('media.video_not_supported') %>
            </video>
          <% else %>
            <div class="flex items-center p-4 bg-gray-50 border border-gray-200">
              <svg class="h-6 w-6 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-sm text-gray-600"><%= media.file_name %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

</article>
