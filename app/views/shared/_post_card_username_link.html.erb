<%
  # ユーザ名リンク部分
  # パラメータ: actor
%>

<% if actor.local? %>
  <%= link_to profile_path(actor.username), 
              class: "post-card-username-link",
              data: { turbo_frame: "_top" } do %>
    <%= parse_content_for_frontend(actor.display_name.presence || actor.username).html_safe %>
  <% end %>
<% else %>
  <%= link_to actor.ap_id, 
              class: "post-card-username-link",
              data: { turbo_frame: "_top" } do %>
    <%= parse_content_for_frontend(actor.display_name.presence || actor.username).html_safe %>
  <% end %>
<% end %>