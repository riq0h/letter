<%
  # 投稿カードヘッダー部分
  # パラメータ: actor, published_at, post, pinned, reblog
%>

<header class="mb-2">
  <div class="flex items-start justify-between mb-2">
    <!-- 左側：ユーザアバターとユーザ情報 -->
    <div class="flex items-start space-x-3">
      <%= render 'shared/post_card_avatar', actor: actor %>
      
      <!-- ユーザ名とユーザID -->
      <div>
        <!-- ユーザ名 -->
        <div class="post-card-username">
          <%= render 'shared/post_card_username_link', actor: actor %>
        </div>
        
        <!-- ユーザID -->
        <div class="post-card-handle">
          @<%= actor.username %><%= actor.domain.present? ? "@#{actor.domain}" : "" %>
        </div>
      </div>
    </div>
    
    <!-- 右側：投稿日時 -->
    <div class="post-card-timestamp text-right">
      <% if pinned %>
        <span class="mr-2">固定投稿</span>
      <% end %>
      <% if reblog %>
        <span class="mr-2">再投稿</span>
      <% end %>
      <%= render 'shared/post_card_time_link', actor: actor, post: post, published_at: published_at %>
    </div>
  </div>
</header>