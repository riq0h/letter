<% content_for :title, "#{@actor.display_name || @actor.username} - letter" %>

<!-- メイン投稿（太い枠で囲む） -->
<article class="mb-8 p-6 border-2 border-gray-400">
  <!-- 記事ヘッダー -->
  <header class="mb-4">
    <div class="flex items-center space-x-4 mb-4">
      <!-- ユーザアバター -->
      <div class="h-12 w-12 bg-gray-500 flex items-center justify-center">
        <span class="text-white font-medium">
          <%= @actor.display_name&.first&.upcase || @actor.username.first.upcase %>
        </span>
      </div>
      
      <!-- ユーザ名と日時 -->
      <div>
        <div class="text-base text-gray-900" style="font-weight: 300;">
          <%= link_to profile_path(@actor.username), class: "hover:text-gray-600 transition-colors" do %>
            <%= @actor.display_name.presence || @actor.username %>
          <% end %>
          <span class="text-gray-500 text-sm ml-2" style="font-weight: 300;">
            @<%= @actor.username %><%= @actor.domain.present? ? "@#{@actor.domain}" : "" %>
          </span>
        </div>
        <div class="text-sm text-gray-500 mt-1" style="font-weight: 300;">
          <time datetime="<%= @post.published_at.iso8601 %>">
            <%= l(@post.published_at, format: :long) %>
          </time>
        </div>
      </div>
    </div>
  </header>

  <!-- 記事本文 -->
  <div class="text-gray-800 leading-relaxed mb-4">
    <div class="whitespace-pre-wrap break-words">
      <%= auto_link_urls(@post.content).html_safe %>
    </div>
  </div>

  <!-- メディア添付 -->
  <% if @post.media_attachments.any? %>
    <div class="mb-4">
      <% @post.media_attachments.each do |media| %>
        <div class="mb-4">
          <% if media.image? %>
            <img src="<%= media.file_url %>" alt="<%= media.alt_text %>" 
                 class="max-w-full h-auto border border-gray-200"
                 loading="lazy">
          <% elsif media.video? %>
            <video class="max-w-full h-auto border border-gray-200" controls preload="metadata">
              <source src="<%= media.file_url %>" type="<%= media.mime_type %>">
              <%= I18n.t('media.video_not_supported') %>
            </video>
          <% else %>
            <div class="flex items-center p-4 bg-gray-50 border border-gray-200">
              <svg class="h-6 w-6 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-sm text-gray-600"><%= media.filename %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</article>

<!-- 返信セクション -->
<% if @post.replies_count > 0 %>
  <section class="mt-8">
    <% 
      # 返信投稿を取得
      replies = ActivityPubObject.where(in_reply_to_ap_id: @post.ap_id)
                                 .where(visibility: ['public', 'unlisted'])
                                 .where(object_type: 'Note')
                                 .includes(:actor)
                                 .order(published_at: :asc)
                                 .limit(20)
    %>
    <% if replies.any? %>
      <% replies.each do |reply| %>
        <article class="mb-6 p-6 border border-gray-300">
          <header class="mb-4">
            <div class="flex items-center justify-between mb-2">
              <!-- 左側：ユーザアバター -->
              <div class="h-10 w-10 bg-gray-500 flex items-center justify-center">
                <span class="text-white font-medium text-sm">
                  <%= reply.actor.display_name&.first&.upcase || reply.actor.username.first.upcase %>
                </span>
              </div>
              
              <!-- 右側：ユーザ名と日時表示 -->
              <div class="text-right">
                <!-- ユーザ名 -->
                <div class="text-base text-gray-900" style="font-weight: 300;">
                  <%= link_to profile_path(reply.actor.username), class: "hover:text-gray-600 transition-colors" do %>
                    <%= reply.actor.display_name.presence || reply.actor.username %>
                  <% end %>
                  <span class="text-gray-500 text-sm ml-2" style="font-weight: 300;">
                    @<%= reply.actor.username %><%= reply.actor.domain.present? ? "@#{reply.actor.domain}" : "" %>
                  </span>
                </div>
                
                <!-- 日時表示 -->
                <div class="text-sm text-gray-500 mt-1" style="font-weight: 300;">
                  <time datetime="<%= reply.published_at.iso8601 %>" title="<%= l(reply.published_at, format: :long) %>">
                    <%= l(reply.published_at, format: :long) %>
                  </time>
                </div>
              </div>
            </div>
          </header>

          <!-- 記事本文 -->
          <div class="text-gray-800 leading-relaxed">
            <div class="whitespace-pre-wrap break-words">
              <%= auto_link_urls(reply.content).html_safe %>
            </div>
          </div>
        </article>
      <% end %>
    <% end %>
  </section>
<% end %>