<% content_for :title, "#{@actor.display_name || @actor.username} - letter" %>

<!-- ブログ記事風の投稿詳細 -->
<article class="prose prose-gray max-w-none">
  <!-- 記事ヘッダー -->
  <header class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <!-- ユーザアバター -->
      <div class="h-12 w-12 bg-gray-500 rounded-full flex items-center justify-center">
        <span class="text-white font-medium">
          <%= @actor.display_name&.first&.upcase || @actor.username.first.upcase %>
        </span>
      </div>
      
      <!-- ユーザ名と日時 -->
      <div>
        <h1 class="text-2xl text-gray-900 mb-1" style="font-weight: 300;">
          <%= link_to profile_path(@actor.username), class: "hover:text-gray-600 transition-colors" do %>
            <%= @actor.display_name.presence || @actor.username %>
          <% end %>
          <span class="text-gray-500 text-lg ml-2" style="font-weight: 300;">
            @<%= @actor.username %><%= @actor.domain.present? ? "@#{@actor.domain}" : "" %>
          </span>
        </h1>
        <div class="text-sm text-gray-600">
          <time datetime="<%= @post.published_at.iso8601 %>">
            <%= l(@post.published_at, format: :long) %>
          </time>
        </div>
      </div>
    </div>
  </header>

  <!-- 記事本文 -->
  <div class="text-gray-800 leading-relaxed text-lg mb-8">
    <div class="whitespace-pre-wrap break-words">
      <%= simple_format(h(@post.content)) %>
    </div>
  </div>

  <!-- メディア添付 -->
  <% if @post.media_attachments.any? %>
    <div class="mb-8">
      <% @post.media_attachments.each do |media| %>
        <div class="mb-4">
          <% if media.image? %>
            <img src="<%= media.file_url %>" alt="<%= media.alt_text %>" 
                 class="max-w-full h-auto rounded border border-gray-200"
                 loading="lazy">
          <% elsif media.video? %>
            <video class="max-w-full h-auto rounded border border-gray-200" controls preload="metadata">
              <source src="<%= media.file_url %>" type="<%= media.mime_type %>">
              <%= I18n.t('media.video_not_supported') %>
            </video>
          <% else %>
            <div class="flex items-center p-4 bg-gray-50 rounded border border-gray-200">
              <svg class="h-6 w-6 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-sm text-gray-600"><%= media.filename %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</article>

<!-- コメント風リプライセクション -->
<% if @post.replies_count > 0 %>
  <section class="mt-12 pt-8 border-t border-gray-200">
    <h2 class="text-xl text-gray-900 mb-6" style="font-weight: 400;">コメント (<%= @post.replies_count %>)</h2>
    <% 
      # 返信投稿を取得
      replies = ActivityPubObject.where(in_reply_to_ap_id: @post.ap_id)
                                 .where(visibility: ['public', 'unlisted'])
                                 .where(object_type: 'Note')
                                 .includes(:actor)
                                 .order(published_at: :asc)
                                 .limit(20)
    %>
    <% if replies.any? %>
      <div class="space-y-6">
        <% replies.each do |reply| %>
          <div class="border-b border-gray-200 pb-6 last:border-b-0 last:pb-0">
            <!-- コメントヘッダー -->
            <div class="flex items-start space-x-3 mb-3">
              <div class="h-8 w-8 bg-gray-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-medium text-xs">
                  <%= reply.actor.display_name&.first&.upcase || reply.actor.username.first.upcase %>
                </span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-2 text-sm">
                  <span class="text-gray-900" style="font-weight: 300;">
                    <%= link_to profile_path(reply.actor.username), class: "hover:text-gray-600 transition-colors" do %>
                      <%= reply.actor.display_name.presence || reply.actor.username %>
                    <% end %>
                  </span>
                  <span class="text-gray-500">
                    @<%= reply.actor.username %><%= reply.actor.domain.present? ? "@#{reply.actor.domain}" : "" %>
                  </span>
                  <span class="text-gray-400">•</span>
                  <time datetime="<%= reply.published_at.iso8601 %>" class="text-gray-500">
                    <%= time_ago_in_words(reply.published_at) %><%= I18n.t('time.ago') %>
                  </time>
                </div>
              </div>
            </div>
            
            <!-- コメント本文 -->
            <div class="text-gray-800 leading-relaxed ml-11">
              <div class="whitespace-pre-wrap break-words">
                <%= simple_format(h(reply.content)) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
<% end %>