<%
  search_params = { q: @query, offset: @next_offset }
  search_params[:username] = @username if @username.present?
  load_more_url = @more_posts_available ? search_index_path(search_params) : nil
%>

<%= render 'shared/post_timeline',
           posts: @posts,
           more_posts_available: @more_posts_available,
           load_more_url: load_more_url %>
