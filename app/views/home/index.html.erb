<% content_for :title, "pit1" %>

<!-- シンプルなブログ風タイムライン -->
<div class="prose prose-gray max-w-none">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render 'shared/post_card', post: post %>
    <% end %>
    
    <!-- ページネーション -->
    <% if @posts.count >= 30 %>
      <div class="flex justify-between mt-12">
        <div>
          <!-- Newer posts link (左端) -->
          <a href="#" class="text-gray-600 hover:text-gray-800 transition-colors">
            ←
          </a>
        </div>
        <div>
          <!-- Older posts link (右端) -->
          <a href="#" class="text-gray-600 hover:text-gray-800 transition-colors">
            →
          </a>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- 投稿がない場合 -->
    <div class="text-center py-16">
      <h2 class="text-xl text-gray-900 mb-4">投稿がありません</h2>
      <p class="text-gray-600">まだ投稿がありません。</p>
    </div>
  <% end %>
</div>