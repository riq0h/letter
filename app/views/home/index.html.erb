<% content_for :title, "letter" %>

<!-- シンプルなブログ風タイムライン -->
<div class="prose prose-gray max-w-none">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render 'shared/post_card', post: post %>
    <% end %>
    
    <!-- ページネーション -->
    <% if @posts.count >= 30 %>
      <div class="flex justify-between mt-12">
        <div>
          <!-- Newer posts link (左端) -->
          <a href="#" class="text-gray-600 hover:text-gray-800 transition-colors">
            ←
          </a>
        </div>
        <div>
          <!-- Older posts link (右端) -->
          <a href="#" class="text-gray-600 hover:text-gray-800 transition-colors">
            →
          </a>
        </div>
      </div>
    <% end %>
  <% end %>
</div>