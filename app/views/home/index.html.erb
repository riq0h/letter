<% content_for :title, @page_title %>

<div class="max-w-6xl mx-auto">
  <!-- ヘッダー -->
  <header class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">pit1</h1>
        <p class="text-gray-600 mt-1">A Lightweight Fediverse Starship</p>
      </div>
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <span class="text-sm text-gray-500">
            <%= I18n.t('auth.logged_in_as', username: current_user.username) %>
          </span>
          <%= link_to settings_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <%= I18n.t('navigation.settings') %>
          <% end %>
        <% else %>
          <%= link_to login_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <%= I18n.t('navigation.login') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </header>

  <!-- タイムライン -->
  <div class="space-y-6">
    <h2 class="text-xl font-semibold text-gray-900">
      <%= I18n.t('pages.home.public_timeline') %>
    </h2>
    
    <% if @posts.any? %>
      <div class="space-y-4">
        <% @posts.each do |post| %>
          <%= render 'shared/post_card', post: post %>
        <% end %>
      </div>
      
      <!-- ページネーション用のプレースホルダー -->
      <div class="flex justify-center pt-8">
        <button class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <%= I18n.t('navigation.load_more') %>
        </button>
      </div>
    <% else %>
      <!-- 投稿がない場合 -->
      <div class="text-center py-12">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <div class="mx-auto h-12 w-12 text-gray-400">
            <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.452l-3.457 1.188a1 1 0 01-1.283-1.283l1.188-3.457A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            <%= I18n.t('pages.home.no_posts_title') %>
          </h3>
          <p class="mt-2 text-gray-500">
            <%= I18n.t('pages.home.no_posts_description') %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>