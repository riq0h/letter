<% content_for :title, "#{@actor.display_name.presence || @actor.username} - pit1" %>

<!-- ブログ風ユーザープロフィール -->
<div class="mb-16">
  <!-- プロフィールヘッダー（四角い線で囲み） -->
  <header class="mb-8 p-6 border border-gray-200 rounded-lg">
    <div class="flex items-center space-x-4 mb-4">
      <!-- アバター -->
      <div class="h-12 w-12 bg-gray-500 rounded-full flex items-center justify-center">
        <span class="text-white font-medium">
          <%= @actor.display_name&.first&.upcase || @actor.username.first.upcase %>
        </span>
      </div>
      
      <!-- ユーザー名 -->
      <div>
        <h1 class="text-2xl text-gray-900" style="font-weight: 300;">
          <%= @actor.display_name.presence || @actor.username %>
        </h1>
        <p class="text-gray-600" style="font-weight: 300;">
          @<%= @actor.username %><%= @actor.domain.present? ? "@#{@actor.domain}" : "" %>
        </p>
      </div>
    </div>
    
    <!-- プロフィール説明 -->
    <% if @actor.summary.present? %>
      <div class="prose prose-gray max-w-none text-gray-700 mb-4">
        <%= simple_format(h(@actor.summary)) %>
      </div>
    <% end %>
    
    <!-- 統計情報（シンプル表示） -->
    <div class="text-sm text-gray-600">
      <span class="mr-4"><%= number_with_delimiter(@posts_count) %> 投稿</span>
      <span class="mr-4"><%= number_with_delimiter(@following_count) %> フォロー中</span>
      <span><%= number_with_delimiter(@followers_count) %> フォロワー</span>
    </div>
  </header>
</div>

<!-- 投稿一覧（ブログ記事風） -->
<div class="prose prose-gray max-w-none" style="margin-top: 80px;">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render 'shared/post_card', post: post %>
    <% end %>
    
    <!-- ページネーション -->
    <% if @posts.count >= 30 %>
      <div class="flex justify-between mt-12">
        <div>
          <!-- Newer posts link (左端) -->
          <a href="#" class="text-gray-600 hover:text-gray-800 transition-colors">
            ←
          </a>
        </div>
        <div>
          <!-- Older posts link (右端) -->
          <a href="#" class="text-gray-600 hover:text-gray-800 transition-colors">
            →
          </a>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- 投稿なしの状態 -->
    <div class="text-center py-16">
      <h2 class="text-xl text-gray-900 mb-4">投稿がありません</h2>
      <p class="text-gray-600">
        <% if @actor.local? %>
          まだ投稿がありません。
        <% else %>
          このユーザーからの投稿はまだ取得されていません。
        <% end %>
      </p>
    </div>
  <% end %>
</div>