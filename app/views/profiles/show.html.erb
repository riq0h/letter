<% content_for :title, "#{@actor.display_name.presence || @actor.username} (@#{@actor.username})" %>

<div class="max-w-6xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <!-- プロフィールヘッダー -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden mb-6">
    <!-- ヘッダー画像（将来的に実装） -->
    <div class="h-32 bg-gradient-to-r from-blue-500 to-purple-600"></div>
    
    <!-- プロフィール情報 -->
    <div class="px-6 py-6">
      <div class="flex items-start space-x-4">
        <!-- アバター -->
        <div class="flex-shrink-0">
          <div class="h-20 w-20 bg-blue-500 rounded-full flex items-center justify-center border-4 border-white shadow-sm -mt-10 relative">
            <span class="text-white font-bold text-2xl">
              <%= @actor.display_name&.first&.upcase || @actor.username.first.upcase %>
            </span>
          </div>
        </div>
        
        <!-- プロフィール詳細 -->
        <div class="flex-1 min-w-0">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-gray-900 truncate">
                <%= @actor.display_name.presence || @actor.username %>
              </h1>
              <p class="text-gray-500 text-lg">
                @<%= @actor.username %><%= @actor.domain.present? ? "@#{@actor.domain}" : "" %>
              </p>
            </div>
          </div>
          
          <!-- プロフィール説明 -->
          <% if @actor.summary.present? %>
            <div class="mt-4">
              <div class="prose prose-sm max-w-none text-gray-900">
                <%= simple_format(h(@actor.summary)) %>
              </div>
            </div>
          <% end %>
          
          <!-- 統計情報 -->
          <div class="flex items-center space-x-6 mt-4 text-sm">
            <div class="flex items-center space-x-1">
              <span class="font-semibold text-gray-900"><%= number_with_delimiter(@posts_count) %></span>
              <span class="text-gray-500">投稿</span>
            </div>
            <div class="flex items-center space-x-1">
              <span class="font-semibold text-gray-900"><%= number_with_delimiter(@following_count) %></span>
              <span class="text-gray-500">フォロー中</span>
            </div>
            <div class="flex items-center space-x-1">
              <span class="font-semibold text-gray-900"><%= number_with_delimiter(@followers_count) %></span>
              <span class="text-gray-500">フォロワー</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- タブ（投稿のみ実装） -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex">
        <a href="#" class="border-b-2 border-blue-500 py-4 px-6 text-sm font-medium text-blue-600">
          投稿
        </a>
        <a href="#" class="border-b-2 border-transparent py-4 px-6 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
          投稿と返信
        </a>
        <a href="#" class="border-b-2 border-transparent py-4 px-6 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
          メディア
        </a>
      </nav>
    </div>
  </div>
  
  <!-- 投稿一覧 -->
  <div class="space-y-4">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render 'shared/post_card', post: post %>
      <% end %>
    <% else %>
      <!-- 投稿なしの状態 -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.452l-3.457 1.188a1 1 0 01-1.283-1.283l1.188-3.457A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8 4.418 0 8 3.582 8 8z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">投稿がありません</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if @actor.local? %>
            まだ投稿がありません。
          <% else %>
            このユーザーからの投稿はまだ取得されていません。
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
  
  <!-- ページネーション（将来実装） -->
  <% if @posts.count >= 20 %>
    <div class="mt-8 flex justify-center">
      <button class="bg-white border border-gray-300 rounded-md px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" disabled>
        さらに読み込む
      </button>
    </div>
  <% end %>
</div>