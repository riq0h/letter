<% content_for :title, "ログイン | #{blog_title}" %>
<% content_for :description, "General Letter Publication System based on ActivityPub" %>

<!-- ブログ風ログインページ -->
<div class="max-w-md mx-auto mt-16">
  <!-- ログインフォームヘッダー -->
  <header class="mb-8 text-center">
    <h1 class="page-heading">
      ログイン
    </h1>
  </header>

  <!-- ログインフォーム -->
  <%= form_with url: login_path, method: :post, local: true, class: "space-y-6", onsubmit: "return true" do |form| %>
    <div>
      <%= form.label :username, "ユーザ名", 
          class: "block text-sm text-gray-700 mb-2 form-label" %>
      <%= form.text_field :username, 
          placeholder: "ユーザ名を入力",
          required: true,
          autofocus: true,
          autocomplete: "username",
          class: "w-full px-3 py-2 border border-gray-300 focus:border-gray-500 transition-colors form-input" %>
    </div>

    <div>
      <%= form.label :password, "パスワード", 
          class: "block text-sm text-gray-700 mb-2 form-label" %>
      <%= form.password_field :password,
          placeholder: "パスワードを入力",
          required: true,
          autocomplete: "current-password",
          class: "w-full px-3 py-2 border border-gray-300 focus:border-gray-500 transition-colors form-input" %>
    </div>

    <div class="pt-4 text-right">
      <%= form.submit "ログイン", 
          class: "btn-secondary btn-sm" %>
    </div>
  <% end %>

  <!-- エラーメッセージ -->
  <% if flash[:alert] %>
    <div class="mt-6 p-4 bg-red-50 border border-red-200">
      <p class="text-sm text-red-700 text-normal">
        <%= flash[:alert] %>
      </p>
    </div>
  <% end %>

</div>
