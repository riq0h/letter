<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- ヘッダー -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 mb-6">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">🚀 pit1 サーバ設定</h1>
          <p class="mt-1 text-sm text-gray-600">設定</p>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">ログイン中: <strong>@<%= current_user.username %></strong></span>
          <%= link_to "ログアウト", logout_path, method: :delete,
              class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- メインコンテンツ -->
      <div class="lg:col-span-2 space-y-6">
        <!-- インスタンス情報 -->
        <div class="bg-white shadow-sm rounded-lg border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">インスタンス情報</h2>
          </div>
          <div class="px-6 py-4 space-y-4">
            <%= form_with model: @settings, url: settings_path, method: :patch, local: true, class: "space-y-4" do |form| %>
              <div>
                <label class="block text-sm font-medium text-gray-700">インスタンス名</label>
                <input type="text" value="<%= @settings[:instance_name] %>" name="settings[instance_name]"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700">説明文</label>
                <textarea name="settings[instance_description]" rows="3"
                          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"><%= @settings[:instance_description] %></textarea>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700">連絡先メール</label>
                <input type="email" value="<%= @settings[:instance_contact_email] %>" name="settings[instance_contact_email]"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700">管理者名</label>
                <input type="text" value="<%= @settings[:instance_maintainer] %>" name="settings[instance_maintainer]"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
              </div>

              <div class="flex items-center">
                <input type="checkbox" <%= 'checked' if @settings[:federation_enabled] %> name="settings[federation_enabled]" value="1"
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <label class="ml-2 block text-sm text-gray-900">フェデレーションを有効化</label>
              </div>

              <div class="pt-4">
                <%= form.submit "設定を保存", 
                    class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- サイドバー -->
      <div class="space-y-6">
        <!-- サーバ統計 -->
        <div class="bg-white shadow-sm rounded-lg border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">🚀 Spaceship Status</h3>
          </div>
          <div class="px-6 py-4 space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">搭乗者数</span>
              <span class="text-sm font-medium text-gray-900"><%= Actor.local.count %>/<%= @settings[:max_accounts] %> 席</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">ドメイン</span>
              <span class="text-sm font-medium text-gray-900"><%= @settings[:activitypub_domain] %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">投稿文字数上限</span>
              <span class="text-sm font-medium text-gray-900"><%= @settings[:character_limit] %> 文字</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">総投稿数</span>
              <span class="text-sm font-medium text-gray-900"><%= ActivityPubObject.local.count %> 件</span>
            </div>
          </div>
        </div>

        <!-- クイックアクション -->
        <div class="bg-white shadow-sm rounded-lg border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">クイックアクション</h3>
          </div>
          <div class="px-6 py-4 space-y-3">
            <%= link_to root_path, 
                class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              パブリックタイムライン
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if flash[:notice] %>
      <div class="fixed bottom-4 right-4 bg-green-50 border border-green-200 rounded-md p-4 shadow-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-green-700"><%= flash[:notice] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="fixed bottom-4 right-4 bg-red-50 border border-red-200 rounded-md p-4 shadow-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-700"><%= flash[:alert] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>